@model ExamenParcial.ViewModel.RegistroViewModel

@{
    ViewData["Title"] = "Registro de remesas";
}

<div class="container" style="margin-top:2rem;">
    <h1 class="text-center mb-4">Crea tu cuenta bancaria</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="RegistroRemesas" asp-action="RegistrarTransaccion" method="post">
                <input type="hidden" id="contactId" name="FormCuenta.Id" value="" />
                <div class="form-group mb-3">
                    <label asp-for="FormRegistro!.Remitente" class="control-label">Nombre</label>
                    <input asp-for="FormRegistro!.Remitente" class="form-control" id="FormContacto_Nombre" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FormRegistro!.Destinatario">Destinatario</label>
                    <input asp-for="FormRegistro!.Destinatario" class="form-control" id="FormContacto_Destinatario"
                        required></input>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FormRegistro!.PaisOrigen">País de Origen</label>
                    <input asp-for="FormRegistro!.PaisOrigen" class="form-control" id="FormContacto_PaisOrigen"
                        required></input>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="FormRegistro!.PaisDestino">País de Destino</label>
                    <input asp-for="FormRegistro!.PaisDestino" class="form-control" id="FormContacto_PaisDestino"
                        required></input>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FormRegistro!.MontoEnviado">Monto Enviado</label>
                    <input asp-for="FormRegistro!.MontoEnviado" class="form-control" id="FormContacto_MontoEnviado"
                        required></input>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FormRegistro!.MonedaEnviado">Moneda</label>
                    <input asp-for="FormRegistro!.MonedaEnviado" class="form-control" id="FormContacto_MonedaEnviado"
                        required></input>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FormRegistro!.TipoCambio">Tipo de Cambio</label>
                    <input asp-for="FormRegistro!.TipoCambio" class="form-control" id="FormContacto_TipoCambio"
                        required></input>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FormRegistro!.MontoRecibido">Monto Recibido</label>
                    <input asp-for="FormRegistro!.MontoRecibido" class="form-control" id="FormContacto_MontoRecibido"
                        required></input>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FormRegistro!.MonedaRecibido">Moneda Recibido</label>
                    <input asp-for="FormRegistro!.MonedaRecibido" class="form-control" id="FormContacto_MonedaRecibido"
                        required />
                </div>

                <div class="form-group">
                    <label asp-for="FormRegistro!.Estado"></label>
                    <select asp-for="FormRegistro!.Estado" class="form-control">
                        <option value="En proceso">En proceso</option>
                        <option value="Finalizado">Finalizado</option>
                    </select>
                </div>

                <div class="form-group text-center mb-3">
                    <button type="submit" class="btn btn-dark">Crear</button>
                </div>


            </form>

            @if (TempData["Message"] != null)
            {
                <div id="successMessage" class="alert alert-success" role="alert">
                    @TempData["Message"]
                </div>
            }
        </div>
    </div>
</div>